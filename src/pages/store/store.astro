---
import Layout from "../../layouts/Layout.astro";
import {TrainerInfo} from "../../components/TrainerInfo"
import {StoreCardPokemon} from "../../components/StoreCardPokemon"
---

<Layout>
    <h2 class="text-2xl text-center font-bold text-white mt-2">Bienvenido a la Tienda</h2>
    <section class="max-w-3xl bg-white mx-auto rounded-md p-4 mt-2 flex gap-2">
        <StoreCardPokemon client:load />
        <div class="flex flex-col w-full">

            <TrainerInfo client:visible />
        </div>
    </section>
</Layout>